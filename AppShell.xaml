<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CodeSnippetManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CodeSnippetManager"
    CurrentItem="{x:Reference Home}"
    Shell.FlyoutBehavior="Disabled">

    <TabBar >
        <ShellContent x:Name="Home"
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent x:Name="Snippets"
            Title="Snippets"
            ContentTemplate="{DataTemplate local:SnippetListPage}"
            Route="SnippetListPage" />
    </TabBar>
    


</Shell>
