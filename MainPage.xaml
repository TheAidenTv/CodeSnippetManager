<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CodeSnippetManager.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30"
            VerticalOptions="Start">

            <Label
                Text="This is Aiden's Code Snippet Manager"
                FontSize="Title"
                HorizontalOptions="Center" 
                Padding="0, 20, 0, 20"/>

            <Label
                Text="Fell free to explore the existing code samples or to add your own"
                FontSize="Body"
                HorizontalOptions="Center" 
                Padding="0, 0, 0, 30"/>

            <Button
                Text="Explore"
                Clicked="OnExploreClicked"
                HorizontalOptions="Center"
                Padding="20, 10" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
